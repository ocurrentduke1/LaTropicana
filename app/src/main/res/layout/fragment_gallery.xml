<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.gallery.GalleryFragment"
    android:background="@drawable/fondo_degradado">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/inter_semibold"
        android:text="@string/Producs"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/btnescaner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/stroke_btn"
        android:fontFamily="@font/inter_semibold"
        android:onClick="esca"
        android:padding="12dp"
        android:text="Scanner"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginLeft="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/txtEscaner"
        app:layout_constraintStart_toEndOf="@+id/txtEscaner"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/txtEscaner"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="#1B96F4"
        android:ems="10"
        android:fontFamily="@font/inter_extralight"
        android:hint="ID"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:layout_marginStart="68dp"
        android:textColor="#FFFFFFFF"
        android:textColorHint="#BEBEBE"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/txtNombreProducto"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginEnd="68dp"
        android:backgroundTint="#1B96F4"
        android:ems="10"
        android:fontFamily="@font/inter_extralight"
        android:hint="@string/nameProduct"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textColor="#FFFFFFFF"
        android:textColorHint="#BEBEBE"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtEscaner" />

    <EditText
        android:id="@+id/txtPrecio"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="68dp"
        android:backgroundTint="#1B96F4"
        android:ems="10"
        android:fontFamily="@font/inter_extralight"
        android:hint="@string/Price"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textColor="#FFFFFFFF"
        android:textColorHint="#BEBEBE"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNombreProducto" />

    <EditText
        android:id="@+id/txtDescripcionProducto"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="68dp"
        android:backgroundTint="#1B96F4"
        android:ems="10"
        android:fontFamily="@font/inter_extralight"
        android:hint="@string/infoPro"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textColor="#FFFFFFFF"
        android:textColorHint="#BEBEBE"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPrecio" />

    <EditText
        android:id="@+id/txtImagenProducto"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="68dp"
        android:backgroundTint="#1B96F4"
        android:ems="10"
        android:fontFamily="@font/inter_extralight"
        android:hint="URL Imagen"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="#BEBEBE"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDescripcionProducto" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="324dp"
        android:layout_height="46dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtImagenProducto" />

    <TextView
        android:id="@+id/btnRegistrarProducto"
        android:layout_width="120dp"
        android:layout_height="51dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/stroke_btn"
        android:fontFamily="@font/inter_semibold"
        android:padding="12dp"
        android:text="@string/Registro"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.017"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner" />

    <TextView
        android:id="@+id/btnBuscarProducto"
        android:layout_width="120dp"
        android:layout_height="51dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/stroke_btn"
        android:fontFamily="@font/inter_semibold"
        android:padding="12dp"
        android:text="@string/Buscar"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/btnRegistrarProducto"
        app:layout_constraintTop_toBottomOf="@+id/spinner" />

    <TextView
        android:id="@+id/btnActualizarProducto"
        android:layout_width="120dp"
        android:layout_height="51dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/stroke_btn"
        android:fontFamily="@font/inter_semibold"
        android:padding="12dp"
        android:text="@string/Actualizar"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btnBuscarProducto"
        app:layout_constraintTop_toBottomOf="@+id/spinner" />

    <TextView
        android:id="@+id/btnBorrarProducto"
        android:layout_width="120dp"
        android:layout_height="51dp"
        android:background="@drawable/stroke_btn"
        android:fontFamily="@font/inter_semibold"
        android:padding="12dp"
        android:text="Borrar"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/btnBuscarProducto"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnBuscarProducto"
        app:layout_constraintTop_toBottomOf="@+id/btnBuscarProducto" />

</androidx.constraintlayout.widget.ConstraintLayout>